#import <Foundation/Foundation.h>
#import <CoreLocation/CoreLocation.h>

#import "YPPhone.h"
#import "YPAddress.h"

typedef CLLocationCoordinate2D YPLocation;

/**
 @brief The YPListing class
 
 Represents an entire listing generated by the YellowAPI.
 */
@interface YPListing : NSObject {
@private
	NSString *identifier;
	NSString *name;
	NSString *enLogo;
	NSString *frLogo;
	NSString *merchantUrl;
	NSArray  *phones;
	YPAddress *address;
	YPLocation location;
}

/**
 @brief The unique identifier of this listing as generated by the YellowAPI
 */
@property (nonatomic, readwrite,   copy) NSString *identifier;

/**
 @brief The name of the merchant
 */
@property (nonatomic, readwrite,   copy) NSString *name;

/**
 @brief The URL of the english logo for this merchant
 */
@property (nonatomic, readwrite,   copy) NSString *enLogo;

/**
 @brief The URL of the french logo for this merchant
 */
@property (nonatomic, readwrite,   copy) NSString *frLogo;

/**
 @brief The permalink to the YellowPages merchant site
 */
@property (nonatomic, readwrite,   copy) NSString *merchantUrl;

/**
 @brief An array of all phone numbers associated with this merchant
 */
@property (nonatomic, readwrite, retain) NSArray  *phones;

/**
 @brief The YPAddress associated with this merchant
 */
@property (nonatomic, readwrite, retain) YPAddress *address;

/**
 @brief The YPLocation (CLLocation) associated with this merchant
 */
@property (nonatomic, readwrite, assign) YPLocation location;

/**
 @brief Initialize this listing using an NSDictionary
 */
- (id)initWithDictionary:(NSDictionary *)dict;

/**
 @brief Update this listing using an NSDictionary
 */
- (void)updateWithDictionary:(NSDictionary *)dict;

@end
